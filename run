#-*-sh-*-

tput reset

flags="-lncurses"

gcc -c main.c
gcc -c combat.c
gcc -c inspect.c
gcc -c draw.c
gcc -c worldgen.c
gcc -c player.c
gcc -c tileset.c
gcc -c global.c

gcc main.o combat.o inspect.o draw.o worldgen.o player.o tileset.o global.o -lncurses

